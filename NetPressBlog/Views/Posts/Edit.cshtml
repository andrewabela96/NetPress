@model NetPressBlog.Models.BlogInfo

@{
    ViewBag.Title = "Edit";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <header class="intro-header">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="site-heading">
                        <h1>Edit Post</h1>
                        <hr class="small">
                        <span class="subheading">Update your post here!</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Subtitle, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.Subtitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Subtitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Category_Id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.DropDownList("Category_Id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Category_Id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2"></div>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Text, new { rows = 10, style = "width:80%" })
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
                @Html.HiddenFor(model => model.DateCreated, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
                @Html.HiddenFor(model => model.Author_Id, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        
        <div class="row">
            <div class="col-md-offset-2 col-md-5">
                <a href="@Url.Action("Index")" class="btn btn-default" role="button">
                    &larr; Back to List
                </a>
            </div>
            <div class="col-md-5">
                <div class="col-md-offset-3">
                    <div class="form-group">
                        <input type="submit" name="Submit" value="Draft" class="btn btn-default" />
                        <input type="submit" name="Submit" value="Publish" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>

