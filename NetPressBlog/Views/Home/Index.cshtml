@{
    ViewBag.Title = "Home Page";
}
@model IEnumerable<NetPressBlog.Models.BlogInfo>

<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>NetPress</h1>
                    <hr class="small">
                    <span class="subheading">The blog where anyone can write about anything</span>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            @foreach (var post in Model)
            {
                <div class="post-preview">
                    <a href="@Url.Action("View", new {id =post.Id})">
                        <h2 class="post-title">
                            @post.Title
                        </h2>
                        <h3 class="post-subtitle">
                            @post.Subtitle
                        </h3>
                    </a>
                    <div class="buttonright">
                        <a href="@Url.Action("Index", "Categories", new {id =post.Category_Id})" class="btn btn-default" role="button">
                            @post.Category.Type
                        </a>
                    </div>
                    <p class="post-meta">Posted by <a href="#">Andrew</a> on @post.DateCreated</p>
                </div>
                <hr>
            }
            <!-- Pager -->
            <ul class="pager">
                <li class="next">
                    <a href="#">Older Posts &rarr;</a>
                </li>
            </ul>
        </div>
    </div>
</div>