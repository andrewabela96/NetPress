<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - NetPress</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

    <!-- Custom CSS -->
    <link href="~/Content/Themes/SideMenu.css" rel="stylesheet">
    <link href="~/Content/Themes/PublicPosts.css" rel="stylesheet">

    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href='http://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
</head>

<body>

    <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
            {
                @Html.AntiForgeryToken()
                <ul class="sidebar-nav">
                    <li class="sidebar-brand">
                        @Html.ActionLink("NetPress", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </li>
                    <li>
                        @Html.ActionLink("Manage Posts", "Index", "Posts")
                    </li>
                    <li>
                        @Html.ActionLink("New Category", "Create", "Category")
                    </li>
                    <li>
                        @Html.ActionLink("Change Password", "ChangePassword", "Manage")
                    </li>
                    <li>
                        <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                    </li>              
                </ul>
            }
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                @RenderBody()

                <hr />
                <footer>
                    <p class="col-md-3">&copy; @DateTime.Now.Year - NetPress</p>
                </footer>
            </div>
        </div>


        <!-- /#page-content-wrapper -->

    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

</html>

